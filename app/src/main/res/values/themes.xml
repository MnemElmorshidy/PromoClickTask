<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PromoClickTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_50</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RatingBar.YellowStyle" parent="Theme.AppCompat">
        <item name="colorAccent">#FFC833</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="RatingBar.PurpleStyle" parent="Theme.AppCompat">
        <item name="colorAccent">@color/purple</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="AppTheme.ToolbarFont" parent="Widget.AppCompat.Toolbar">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>